@model RealTimeBlogPosts.DTO.DTOPost
@{
    foreach (var post in Model.Posts)
    {
        <div class="card mb-3">
            <div class="card-header">
                @post.Title
            </div>
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="@post.ImageUrl" height="200" width="300" class="card-img-top" alt="image" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@post.SubTitle</h5>
                        <p class="card-text">@post.Body</p>
                        <p class="card-text"><small class="text-muted">Author: @post.Author</small></p>
                    </div>
                </div>
            </div>
        </div>
    }
}
<nav aria-label="Page navigation example">
    <ul class="pagination">
        @{
            for (int i = 0; i < Model.PageCount; i++)
            {
                <li class="@(Model.Pages[i].IsCurrent?"active":"") page-item"><a class="page-link" href="~/Home/Index/@(i+1)">@(i+1)</a></li>
            }
        }
    </ul>
</nav>